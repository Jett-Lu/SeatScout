{
  "manifest_version": 2,
  "name": "SeatScout",
  "version": "1.2.0",
  "description": "Monitor McMaster MyTimetable seat availability and alert when seats open.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "https://mytimetable.mcmaster.ca/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "SeatScout",
    "default_popup": "popup.html"
  }
}